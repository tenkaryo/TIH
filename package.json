{
  "name": "onthisday-api",
  "version": "1.0.0",
  "description": "API server for OnThisDay historical data",
  "main": "api.js",
  "scripts": {
    "start": "node api.js",
    "dev": "nodemon api.js",
    "dev:frontend": "node dev-server.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "build": "npm run build:prepare && node scripts/generate-static-pages.js",
    "build:prepare": "mkdir -p public && cp index.html styles.css script.js data.js about.html about-zh.html privacy.html privacy-zh.html terms.html terms-zh.html public/",
    "build:static": "node scripts/generate-static-pages.js",
    "deploy": "vercel --prod",
    "local": "concurrently \"npm start\" \"npm run dev:frontend\"",
    "seo:test": "node scripts/test-seo.js",
    "seo:validate": "node scripts/validate-seo.js",
    "deploy:check": "node scripts/test-deployment.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "history",
    "api",
    "onthisday"
  ],
  "author": "OnThisDay Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}